DM OUTPUT 'CLEAR' CONTINUE;
DM LOG 'CLEAR' CONTINUE;
DM ODSRESULTS 'CLEAR';

TITLE1;
TITLE2;

ODS HTML BODY = 'SAMPLE.HTML' STYLE = BRICK;
TITLE1 FIRST;
PROC TABULATE DATA=SASHELP.CARS;
	VAR HORSEPOWER;
	TABLE HORSEPOWER*(MEAN N);
RUN;

TITLE1 SECOND;
PROC TABULATE DATA=SASHELP.CARS;
	CLASS ORIGIN;
	VAR HORSEPOWER;
	TABLE HORSEPOWER*ORIGIN*(MEAN N);
RUN;

TITLE1 THIRD;
PROC TABULATE DATA=SASHELP.CARS;
	CLASS ORIGIN DRIVETRAIN;
	VAR HORSEPOWER;
	TABLE HORSEPOWER*ORIGIN*DRIVETRAIN*(MEAN N);
RUN;

TITLE1 FOURTH;
PROC TABULATE DATA=SASHELP.CARS;
	CLASS ORIGIN DRIVETRAIN;
	VAR HORSEPOWER;
	TABLE HORSEPOWER*ORIGIN,DRIVETRAIN*(MEAN N)/box="test label";
RUN;

/*TITLE1 FIRST SNACKS;
PROC TABULATE DATA=SASHELP.SNACKS OUT=SNACKTABLE;
	CLASS PRODUCT;
	VAR QTYSOLD;
	TABLE PRODUCT,QTYSOLD(QTYSOLD QTYSOLD*COLPCTSUM);
RUN;*/

TITLE1 FIRST SNACKS;
PROC TABULATE DATA=SASHELP.SNACKS OUT=SNACKTABLE;
	CLASS PRODUCT;
	VAR QTYSOLD;
	TABLE PRODUCT ALL,QTYSOLD QTYSOLD*COLPCTSUM;
RUN;

/*PROC TABULATE DATA=SASHELP.SNACKS OUT=SNACKTABLE;
	CLASS PRODUCT;
	VAR QTYSOLD;
	TABLE PRODUCT ALL,QTYSOLD QTYSOLD*PCTSUM<PRODUCT ALL>;	
RUN;
*/

DATA SNACKTABLE (DROP = _TYPE_ _PAGE_ _TABLE_);
	SET SNACKTABLE;
	RENAME QtySold_PctSum_0_QtySold=PERCENTSOLD QTYSOLD_SUM = TOTALSOLD;
RUN;

PROC SORT DATA=SNACKTABLE;
	BY DESCENDING PERCENTSOLD;
RUN;

PROC PRINT DATA=SNACKTABLE;
RUN;

ODS HTML CLOSE;
